<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="10dp"
    android:clickable="true"
    android:background="?attr/colorBackgroundAccent"
    android:foreground="?android:attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/result_comic_image"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            fresco:actualImageScaleType="centerCrop"/>
        <TextView
            android:id="@+id/result_comic_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/result_comic_source_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/result_comic_source"
            android:layout_alignParentTop="true"
            android:text="@string/result_source"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/result_comic_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/result_comic_update_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/result_comic_update"
            android:layout_alignParentBottom="true"
            android:text="@string/result_update"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/result_comic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/result_comic_image"
            android:layout_toLeftOf="@id/result_comic_source_tab"
            android:layout_marginRight="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/result_comic_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/result_comic_title"
            android:layout_toLeftOf="@id/result_comic_source_tab"
            android:layout_below="@id/result_comic_title"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"/>
    </RelativeLayout>
</FrameLayout>
